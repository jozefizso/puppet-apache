<?xml version="1.0" encoding="UTF-8"?>
<plist version="1.0">
  <dict>
    <key>Label</key>
    <string>dev.apache</string>

    <key>Boxen</key>
    <dict>
      <key>Description</key>
      <string>Apache Web Server</string>
    </dict>

    <key>ProgramArguments</key>
    <array>
      <string><%= scope.lookupvar "apache::config::executable" %></string>
      <string>-D</string>
      <string>FOREGROUND</string>
      <string>-f</string>
      <string><%= scope.lookupvar "apache::config::configfile" %></string>
      <string>-E</string>
      <string><%= scope.lookupvar "apache::config::errorlogfile" %></string>
    </array>

    <key>RunAtLoad</key>
    <true />

    <key>KeepAlive</key>
    <false />
</dict>
</plist>
